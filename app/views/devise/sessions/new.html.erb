<div class='main-container'>
  <h1 class="text-center" style="background-color: #3d9ae2; margin-top: 35px; padding: 40px;">Log in
  </h1>

<div class="formular-container div-log-in-form">
 <div class="profile-content-button">
    <%= image_tag("meditation.png", class: 'logo') %>
</div>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                label: false,
                placeholder: "E-mail",
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                label: false,
                placeholder: "Password",
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div>
    <button type="button" class="btn-block button-blue">

    <%= f.button :submit, "Log in" %>
    </button>
<%= render "devise/shared/links" %>
  </div>
<% end %>

 </div>
</div>

