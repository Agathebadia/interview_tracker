<!-- Render cards with instance and their value -->

<div style="display: flex; " >
<%= link_to "Start a new application", new_job_application_path %>


<% @job_applications.each do |job_application| %>
<div class="card-product">
  <div class="card-product-infos">
    <h2><%= job_application.company_name %></h2>
    <div class="details">
    <div class="application-details">
    <p>Job title: <%= job_application.job_title %></p>
    <p> Status: <%= job_application.status %></p>
    </div>
    <div class="interview-details">
    <p> @interview.date </p>
    <p><%= link_to "Edit", edit_job_application_path %></p>
    </div>
  </div>
  </div>
</div>
<% end %>
</div>


