<!-- Render cards with instance and their value -->
<% active = "active" %>
<div class="profile-content content">
  <div class="tab-logo">
    <div class="tabs">
      <ul class="nav nav-pills">
        <li class="nav-item">
          <%= link_to "All", show_profiles_path, class:"nav-link #{active if !params[:status]}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Applied", show_profiles_path(status: 'Applied'), class:"nav-link #{active if params[:status] == 'Applied'}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Interviewing", show_profiles_path(status: 'Interviewing'), class:"nav-link #{active if params[:status] == 'Interviewing'}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Assignment", show_profiles_path(status: 'Assignment'), class:"nav-link #{active if params[:status] == 'Assignment'}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Final interview", show_profiles_path(status: 'Final interview'), class:"nav-link #{active if params[:status] == 'Final interview'}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Offer", show_profiles_path(status: 'Offer'), class:"nav-link #{active if params[:status] == 'Offer'}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Hired", show_profiles_path(status: 'Hired'), class:"nav-link #{active if params[:status] == 'Hired'}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Closed", show_profiles_path(status: 'Closed'), class:"nav-link #{active if params[:status] == 'Closed'}" %>
        </li>
      </ul>
    </div>
  </div>
  <%= render 'applications', applications: @upcoming_interviews, title: 'Your interview(s) in the upcoming days' %>
  <%= render 'applications', applications: @with_interviews, title: 'Your scheduled interview(s)' %>
  <%= render 'applications', applications: @no_interviews, title: 'No interview planned' %>
</div>


